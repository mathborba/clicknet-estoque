@model IEnumerable<Engefibra.Data.Models.PessoaEndereco>
@{
    Layout = null;
}

<div class="well">
    <script type="text/javascript">
        $(function () {
            $("#btnAdicionarEndereco").click(function (e) {
                e.preventDefault();
                $.ajax({
                    url: '@Url.Action("AddOrUpdate","PessoaEndereco")',
                    type: 'GET',
                    success: function (datahtml) {
                        $("#modal-sistema-title").text("Pessoa - Endereços");
                        $(".modal-sistema-content").html(datahtml);
                        $("#modal-sistema").modal('show');
                    }
                });
                return false;
            });
        });
    </script>

    <p>
        @Html.ActionLink("Novo", "AddOrUpdate", null, new { id = "btnAdicionarEndereco", @class = "btn btn-success" })
    </p>
    <table class="table table-bordered table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Referencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CEP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Logradouro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UF)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Referencia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CEP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Logradouro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Numero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UF)
                </td>
                <td>
                    @Html.ActionLink("Editar", "AddOrUpdate", new { id = item.Id }) |
                    @Html.ActionLink("Remover", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
</div>