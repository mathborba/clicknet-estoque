@model Engefibra.Web.ViewModels.HomeViewModel
@{
    ViewBag.Title = "Dashboard";
}

<h1>Dashboard</h1>

<div class="alert alert-success">
    Bem-vindo(a) a Dashboard da Engefibra, para monitoramento de Obras, Estoque e Utilização dos veiculos da empresa. Para navegar, basta utilizar o menu acima para acessar as funcionalidades.
</div>

<div class="row">
    <div class="col-md-6">
        <h3>Ultimas Movimentações</h3>
        @if (Model.Movimentacoes.Count() > 0)
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <td>Produto</td>
                        <td>Quantidade</td>
                        <td>Mov. Tipo</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Movimentacoes)
                    {
                        <tr>
                            <td>@item.Produto.Nome</td>
                            <td>@item.Quantidade</td>
                            <td>@(item.MovimentoTipo == -1 ? "Saida" : "Entrada")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning">
                Não existem movimentações realizadas.
            </div>
        }
    </div>
    <div class="col-md-6">
        <h3>Ultimas Obras</h3>
        @if (Model.Obras.Count() > 0)
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <td>Id</td>
                        <td>Nome</td>
                        <td>Cidade</td>
                        <td>Status</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Obras)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Nome</td>
                            <td>@item.Cidade</td>
                            <td>@item.ObraStatus.Nome</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning">
                Não existem obras cadastradas.
            </div>
        }
    </div>
    <div class="clearfix"></div>
    <div class="col-md-6">
        <h3>Ultimos Produtos</h3>
        @if (Model.Produtos.Count() > 0)
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <td>Código</td>
                        <td>Nome</td>
                        <td>Fornecedor</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Produtos)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Nome</td>
                            <td>@item.Fornecedor</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning">
                Não existem produtos cadastrados
            </div>
        }
    </div>
    <div class="col-md-6">
        <h3>Ultimos Veiculos</h3>
        @if (Model.Veiculo.Count() > 0)
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <td>Código</td>
                        <td>Modelo</td>
                        <td>Marca</td>
                        <td>Cor</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Veiculo)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Modelo</td>
                            <td>@item.Marca</td>
                            <td>@item.Cor</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning">
                Não existem veiculos cadastrados.
            </div>
        }
    </div>
</div>